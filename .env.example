# Nombre de la aplicación
APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://pep-2025.onrender.com

# Log
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de datos MySQL (Render)
DB_CONNECTION=mysql
DB_HOST=pep-db-xxxxxx.render.com   # reemplaza con tu host
DB_PORT=3306
DB_DATABASE=pep                  # reemplaza con el nombre de tu DB
DB_USERNAME=pep_user             # reemplaza con el usuario
DB_PASSWORD=xxxxxxxxx            # reemplaza con tu contraseña

# Cache y sesiones
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (opcional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"
